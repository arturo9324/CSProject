      			<div class="alert"><i class="material-icons dp48">report_problem</i><%= alert %></div>
			<% end %>
  		</div>
  		<div class="body">
  			<%= yield %>
  		</div>
  		<div class="footer top-space">
      		<div class="footer-container">
        		<p class="text-muted">Arturo PÃ©rez Dorantes</p>
      		</div>
		</div>
  	</div>
  </body>
